!define BLANK ""

TARGET = output/usbddos.exe

all: $(TARGET)

!ifndef DEBUG
DEBUG = 0
!endif

!ifeq DEBUG 1
STACK_SIZE = 4096 # for debug output buffer
!else
STACK_SIZE = 1024
!endif

CC = wcc
CFLAGS = -za99 -DDEBUG=$(DEBUG) -wx -zq -3 -bt=dos -ze -ms -os -s -i..
CXX = wpp
CXXFLAGS = -DDEBUG=$(DEBUG) -wx -zq -3 -bt=dos -ze -ms -os -s -ei -i..

LDFLAGS = SYS DOS &
OPTION Q &
OPTION STACK=$(STACK_SIZE) &
OPTION MAP=output/map.txt

!ifeq DEBUG 0
CFLAGS += -DNDEBUG
CXXFLAGS += -DNDEBUG
!endif

!ifndef SILENT
SILENT = @
!endif

!ifdef __MSDOS__
clean: .symbolic
    del output\*.obj
    del output\*.log
    del output\map.txt
!else
clean: .symbolic
    rm -f output/*.obj
    rm -f output/*.log
    rm -f output/map.txt
!endif

{../}.c{output/}.obj: .AUTODEPEND
    @echo $<
    $(SILENT)$(CC) $(CFLAGS) -fo=$@ -fr $<

{../USBDDOS/}.c{output/}.obj: .AUTODEPEND
    @echo $<
    $(SILENT)$(CC) $(CFLAGS) -fo=$@ -fr $<

{../USBDDOS/DPMI/}.c{output/}.obj: .AUTODEPEND
    @echo $<
    $(SILENT)$(CC) $(CFLAGS) -fo=$@ -fr $<

{../USBDDOS/DPMI/}.cpp{output/}.obj: .AUTODEPEND
    @echo $<
    $(SILENT)$(CXX) $(CXXFLAGS) -fo=$@ -fr $<

{../USBDDOS/HCD/}.c{output/}.obj: .AUTODEPEND
    @echo $<
    $(SILENT)$(CC) $(CFLAGS) -fo=$@ -fr $<

{../USBDDOS/CLASS/}.c{output/}.obj: .AUTODEPEND
    @echo $<
    $(SILENT)$(CC) $(CFLAGS) -fo=$@ -fr $<

OBJS = output/dpmi.obj &
output/dpmi_bc.obj &
output/xms.obj &
output/pci.obj &
output/pic.obj &
output/usb.obj &
output/usballoc.obj &
output/usbtable.obj &
output/dbgutil.obj &
output/hcd.obj &
output/ohci.obj &
output/uhci.obj &
output/ehci.obj &
output/msc.obj &
output/hid.obj &
output/hub.obj &
output/main.obj

$(TARGET) : $(OBJS)
    wlink NAME $(TARGET) $(LDFLAGS) @<<
FIL $(OBJS:.obj=.obj,)
<<
